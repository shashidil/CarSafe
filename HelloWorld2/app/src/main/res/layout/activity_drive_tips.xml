<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DriveTips"
    android:orientation="vertical">

    <TextView
        android:id="@+id/vehicalReg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Drive Safe"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="15pt"
        android:textColor="#FF5800"
        />
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/driveTip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text=" Get familiar with your car"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="8pt"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:id="@+id/cb1">

        </CheckBox>
    </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/driveTip2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text=" Wear the seat belt"
            android:textStyle="bold"
            android:textSize="8pt"
            android:textColor="@color/black"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="210dp"
            android:id="@+id/cb2">

        </CheckBox>
    </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/driveTip3"
            android:layout_width="274dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text=" Check and make adjustments before driving"
            android:textColor="@color/black"
            android:textSize="8pt"
            android:textStyle="bold" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:id="@+id/cb3">

        </CheckBox>
    </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/driveTip4"
            android:layout_width="274dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Keep both your hands on the steering wheel"
            android:textColor="@color/black"
            android:textSize="8pt"
            android:textStyle="bold" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:id="@+id/cb4">

        </CheckBox>
    </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/driveTip5"
            android:layout_width="274dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text=" Maintain moderate speed"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="8pt"
            android:textStyle="bold" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:id="@+id/cb5">

        </CheckBox>
    </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/driveTip6"
            android:layout_width="274dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text=" Use signal indicators"
            android:textColor="@color/black"
            android:textSize="8pt"
            android:textStyle="bold" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:id="@+id/cb6">

        </CheckBox>
    </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/driveTip7"
            android:layout_width="274dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text=" Avoid distractions"

            android:textColor="@color/black"
            android:textSize="8pt"
            android:textStyle="bold" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:id="@+id/cb7">

        </CheckBox>
    </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/driveTip8"
            android:layout_width="274dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text=" Be confident and calm"
            android:textColor="@color/black"
            android:textSize="8pt"
            android:textStyle="bold" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:id="@+id/cb8">

        </CheckBox>
    </LinearLayout>
    <Button
        android:id="@+id/btnDrive"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:text="Done"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#FF5800"/>
</LinearLayout>