<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/plain_223"
    android:orientation="vertical"
    tools:context=".Repair.Repair_Row">


    <TextView
        android:id="@+id/txtRepair"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="250dp"
        android:hint="Repair"
        android:textAlignment="center"
        android:textSize="10pt"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="39dp" />

    <TextView
        android:id="@+id/txtRepairdes"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="20dp"
        android:hint="Repair Des"
        android:textAlignment="center"
        android:textSize="10pt"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="39dp" />

    <TextView
        android:id="@+id/txtRepaircost"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="20dp"
        android:hint="Repair cost"
        android:textAlignment="center"
        android:textSize="10pt"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="39dp" />

    <TextView
        android:id="@+id/txtRepairdate"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="20dp"
        android:hint="Repair date"
        android:textAlignment="center"
        android:textSize="10pt"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="39dp" />
</LinearLayout>