<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/__home_2_copy"
    android:orientation="vertical"
    tools:context=".Refuel.refueling">

    <TextView
        android:id="@+id/refuel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:padding="5dp"
        android:text=" Refueling "
        android:textAlignment="center"
        android:textColor="#FF5800"
        android:textSize="24sp"
        android:textStyle="bold" />


    <Spinner
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:ems="10"
        android:minHeight="48dp"
        android:id="@+id/spvehuRfnum"
        >

    </Spinner>
    <EditText
        android:id="@+id/edtRefuelDate"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="Date "
        android:inputType="text"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/edtRefuelcost"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="Cost "
        android:inputType="text"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/edtRefuellocation"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="Location "
        android:inputType="text"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/edtRefuelqty"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="Quantity (Liters)"
        android:inputType="text"
        android:minHeight="48dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:context=".ServiceAdd">

        <Button
            android:id="@+id/btnRefuelAdd"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#FF5800"
            android:text="Save" />

        <Button
            android:id="@+id/btnRefuelView"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#FF5800"
            android:text="History" />
    </LinearLayout>

    <TextView
        android:id="@+id/refuelViewDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="View mileage and fuel state"
        android:padding="5dp"
        android:textAlignment="center"
        android:textColor="#FF5800"
        android:textSize="10sp"
        android:textStyle="bold" />

</LinearLayout>