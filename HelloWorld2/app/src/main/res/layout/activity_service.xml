<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/_41_223_223"
    android:orientation="vertical"
    tools:context=".Service.Service">

    <TextView
        android:id="@+id/vehicalReg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:padding="5dp"
        android:text="Service Details"
        android:textAlignment="center"
        android:textColor="#FF5800"
        android:textSize="24sp"
        android:textStyle="bold" />
    <Spinner
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:ems="10"
        android:minHeight="48dp"
        android:id="@+id/spvehuSnum"
        >

    </Spinner>

    <EditText
        android:id="@+id/edtServicecenter"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="Service Center Name "
        android:inputType="textPersonName"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/edtServiceMileage"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="Mileage "
        android:inputType="number"
        android:minHeight="48dp" />

    <TextView
        android:id="@+id/serviceOil"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:padding="5dp"
        android:text="Change Engine oil"
        android:textColor="@color/black"
        android:textStyle="bold" />


    <RadioGroup
        android:id="@+id/rbgroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbYes"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:text="Yes">


            </RadioButton>

            <RadioButton
                android:id="@+id/rbNo"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:text="No">

            </RadioButton>
        </LinearLayout>
    </RadioGroup>


    <EditText
        android:id="@+id/edtServiceDes"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="Discription"
        android:inputType="textPersonName"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/edtServicedate"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="Date"
        android:minHeight="48dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        tools:context=".ServiceAdd">

        <Button
            android:id="@+id/btnServiceAdd"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#FF5800"
            android:text="Save" />

        <Button
            android:id="@+id/btnServiceView"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#FF5800"
            android:text="View" />
    </LinearLayout>
</LinearLayout>